<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="olark" translate="label" sortOrder="1000000">
            <label>Olark</label>
        </tab>
        <section id="olark_chatbox" translate="label" type="text" sortOrder="300" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Chatbox</label>
            <tab>olark</tab>
            <resource>Olark_Chatbox::config_olark_chatbox</resource>
            <group id="settings" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Settings</label>
                <field id="insert_on_all_pages" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Insert on all pages</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="site_id" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Olark Site-ID</label>
                    <comment>
                        <model>Olark\Chatbox\Model\Config\Comment\SiteId</model>
                    </comment>
                </field>
                <field id="custom_config" translate="label" type="textarea" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Developer API snippets</label>
                </field>
            </group>
        </section>
    </system>
</config>
