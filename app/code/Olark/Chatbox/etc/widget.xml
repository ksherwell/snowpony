<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="olark_chatbox" class="Olark\Chatbox\Block\Widget\Chatbox">
        <label translate="true">Olark Live Chat</label>
        <description translate="true">Adds Olark Live Chat to your website.</description>
        <parameters>
            <parameter name="site_id" xsi:type="block" visible="true" required="true" sort_order="10">
                <label translate="true">Olark Site-ID</label>
                <block class="Olark\Chatbox\Block\Adminhtml\SiteId\Comment"/>
            </parameter>
            <!--<parameter name="custom_config" xsi:type="textarea" visible="true" required="false" sort_order="20">-->
            <!--<label translate="true">Developer API snippets</label>-->
            <!--<description />-->
            <!--</parameter>-->
