<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.main.title">
            <block class="Blackbird\EstimateTimeShipping\Block\Order\History"
                   name="order.preparation.time" after="order.date"
                   ifconfig="ets/display/display_on_order_details"
                   template="Blackbird_EstimateTimeShipping::order/history.phtml"/>
        </referenceContainer>
        <referenceBlock name="additional.product.info">
            <block class="Blackbird\EstimateTimeShipping\Block\Order\Item"
                   name="order.product.preparation.time"
                   ifconfig="ets/display/display_on_order_product_details"
                   template="Blackbird_EstimateTimeShipping::order/item.phtml"/>
        </referenceBlock>
    </body>
</page>