<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="additional.product.info">
            <block class="Magento\Framework\View\Element\Template" name="checkout.cart.product.preparation.time"
                   ifconfig="ets/display/display_on_cart_products" template="Blackbird_EstimateTimeShipping::cart_item_preparation_time.phtml"/>
        </referenceBlock>
        <referenceBlock name="checkout.cart.totals.container">
            <block class="Magento\Checkout\Block\Cart\Totals" name="checkout.cart.shipping.product.preparation.time"
                   ifconfig="ets/display/display_on_cart_totals" template="Blackbird_EstimateTimeShipping::cart_summary_date.phtml" after="-"/>
        </referenceBlock>
    </body>
</page>