<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">estimatetimeshipping_publicholiday_form.publicholiday_form_data_source</item>
            <item name="deps" xsi:type="string">estimatetimeshipping_publicholiday_form.publicholiday_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Holiday Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">estimatetimeshipping_publicholiday_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Blackbird\EstimateTimeShipping\Block\Adminhtml\PublicHoliday\Edit\BackButton</item>
            <item name="delete" xsi:type="string">Blackbird\EstimateTimeShipping\Block\Adminhtml\PublicHoliday\Edit\DeleteButton</item>
            <item name="reset" xsi:type="string">Blackbird\EstimateTimeShipping\Block\Adminhtml\PublicHoliday\Edit\ResetButton</item>
            <item name="save" xsi:type="string">Blackbird\EstimateTimeShipping\Block\Adminhtml\PublicHoliday\Edit\SaveButton</item>
            <item name="save_and_continue" xsi:type="string">Blackbird\EstimateTimeShipping\Block\Adminhtml\PublicHoliday\Edit\SaveAndContinue</item>
        </item>
    </argument>
    <dataSource name="publicholiday_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Blackbird\EstimateTimeShipping\Model\PublicHoliday\DataProvider</argument>
            <argument name="name" xsi:type="string">publicholiday_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">public_holiday_id</argument>
            <argument name="requestFieldName" xsi:type="string">public_holiday_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="estimatetimeshipping/publicholiday/save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string"/>
            </item>
        </argument>
        <field name="public_holiday_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">publicholiday</item>
                    <item name="dataScope" xsi:type="string">public_holiday_id</item>
                </item>
            </argument>
        </field>
        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">publicholiday</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="dataScope" xsi:type="string">name</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="description">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Description</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="source" xsi:type="string">publicholiday</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="dataScope" xsi:type="string">description</item>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="date_information">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true">Date Informations</item>
                <item name="sortOrder" xsi:type="number">10</item>
            </item>
        </argument>
        <field name="date_type" component="Blackbird_EstimateTimeShipping/js/form/element/date-type-select">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Blackbird\EstimateTimeShipping\Model\PublicHoliday\Source\DateType</item>
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">select</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">estimatetimeshipping_publicholiday</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>number</dataType>
                <label>Date Type</label>
                <dataScope>date_type</dataScope>
            </settings>
        </field>
        <container name="fixed_date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">40</item>
                </item>
            </argument>
            <htmlContent name="fixed_date">
                <argument name="block" xsi:type="object">Blackbird\EstimateTimeShipping\Block\Adminhtml\PublicHoliday\Edit\Form\FixedDate</argument>
            </htmlContent>
        </container>
        <container name="variable_date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">50</item>
                </item>
            </argument>
            <htmlContent name="variable_date">
                <argument name="block" xsi:type="object">Blackbird\EstimateTimeShipping\Block\Adminhtml\PublicHoliday\Edit\Form\VariableDate</argument>
            </htmlContent>
        </container>
        <field name="public_holidays">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Blackbird\EstimateTimeShipping\Ui\Component\Listing\Column\HolidayGroup\Options</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Holidays Group</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="source" xsi:type="string">publicholiday</item>
                    <item name="dataScope" xsi:type="string">holidays_group_id</item>
                    <item name="default" xsi:type="string">0</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>