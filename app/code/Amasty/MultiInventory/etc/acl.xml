<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Catalog::catalog">
                    <resource id="Amasty_MultiInventory::multi_inventory" title="Inventory" translate="title"
                              sortOrder="40">
                        <resource id="Amasty_MultiInventory::warehouses" title="Warehouses"
                                   translate="title" sortOrder="10"/>
                        <resource id="Amasty_MultiInventory::stocks" title="Manage Stock"
                                   translate="title" sortOrder="20"/>
                        <resource id="Amasty_MultiInventory::import_stocks" title="Import Stock"
                                  translate="title" sortOrder="30"/>
                        <resource id="Amasty_MultiInventory::export_stocks" title="Export Stock"
                                  translate="title" sortOrder="40"/>
                        <resource id="Amasty_MultiInventory::lowstock" title="Low Stock"
                                  translate="title" sortOrder="50"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Amasty_MultiInventory::config_stock" title="Amasty Multi Warehouse Inventory" sortOrder="151499" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
